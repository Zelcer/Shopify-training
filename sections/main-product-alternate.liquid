<div class="product-detal__container container">
  <div class="product-detal__gallery">
    <picture>
      <source type="image/webp" srcset="https://zelcer.github.io/spurit-home-work/img/webp/main-pic@1x.webp 1x, https://zelcer.github.io/spurit-home-work/img/webp/main-pic@2x.webp 2x" />
      <img
        class="product-detal__img"
        src="https://zelcer.github.io/spurit-home-work/img/jpg/main-pic@1x.jpg"
        srcset="https://zelcer.github.io/spurit-home-work/img/jpg/main-pic@2x.jpg 2x"
        alt="Girl in a white unisex t-shirt."
      />
    </picture>
  </div>
  <div class="product-detal__main-info">
    <h1 id="productLabel" class="product-detal__title">White unisex t-shirt</h1>
    <p class="product-detal__price">CHF 40</p>
    <p class="product-detal__tax">Tax included</p>
    <form class="product-form" action="#" method="post">
      <fieldset class="product-form__group product-form__group--size">
        <legend class="product-form__caption">Size</legend>
        <ul class="product-form__options" role="list">
          <li class="product-form__option">
            <input id="sizeOption1" class="v-h product-form__radio" type="radio" name="sizes" value="xs" />
            <label class="product-form__label product-form__label--size" for="sizeOption1">xs</label>
          </li>
          <li class="product-form__option">
            <input
              id="sizeOption2"
              class="v-h product-form__radio"
              type="radio"
              name="sizes"
              value="s"
              checked
            />
            <label class="product-form__label product-form__label--size" for="sizeOption2">s</label>
          </li>
          <li class="product-form__option">
            <input id="sizeOption3" class="v-h product-form__radio" type="radio" name="sizes" value="m" />
            <label class="product-form__label product-form__label--size" for="sizeOption3">m</label>
          </li>
          <li class="product-form__option">
            <input id="sizeOption4" class="v-h product-form__radio" type="radio" name="sizes" value="l" />
            <label class="product-form__label product-form__label--size" for="sizeOption4">l</label>
          </li>
          <li class="product-form__option">
            <input id="sizeOption5" class="v-h product-form__radio" type="radio" name="sizes" value="xl" />
            <label class="product-form__label product-form__label--size" for="sizeOption5">xl</label>
          </li>
          <li class="product-form__option">
            <input
              id="sizeOption6"
              class="v-h product-form__radio"
              type="radio"
              name="sizes"
              value="2xl"
              disabled
            />
            <label class="product-form__label product-form__label--size" for="sizeOption6">2xl</label>
          </li>
        </ul>
      </fieldset>
      <fieldset class="product-form__group product-form__group--color">
        <legend class="product-form__caption">
          Color
          <span class="color-name" aria-hidden="true">- White</span>
        </legend>
        <ul class="product-form__options color-options" role="list">
          <li class="color-options__item">
            <input
              id="colorOption1"
              class="v-h color-options__radio"
              type="radio"
              name="colors"
              value="white"
              checked
            />
            <label
              class="color-options__label color-options__label--white"
              for="colorOption1"
              aria-labelledby="colorTooltipWhite"
            ></label>
            <span id="colorTooltipWhite" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              White
            </span>
          </li>
          <li class="color-options__item">
            <input
              id="colorOption2"
              class="v-h color-options__radio"
              type="radio"
              name="colors"
              value="black"
            />
            <label
              class="color-options__label color-options__label--black"
              for="colorOption2"
              aria-labelledby="colorTooltipBlack"
            ></label>
            <span id="colorTooltipBlack" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              Black
            </span>
          </li>
          <li class="color-options__item">
            <input id="colorOption3" class="v-h color-options__radio" type="radio" name="colors" value="grey" />
            <label
              class="color-options__label color-options__label--grey"
              for="colorOption3"
              aria-labelledby="colorTooltipGrey"
            ></label>
            <span id="colorTooltipGrey" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              Grey
            </span>
          </li>
          <li class="color-options__item">
            <input
              id="colorOption4"
              class="v-h color-options__radio"
              type="radio"
              name="colors"
              value="purple-latte"
            />
            <label
              class="color-options__label color-options__label--purple"
              for="colorOption4"
              aria-labelledby="colorTooltipPurple"
            ></label>
            <span id="colorTooltipPurple" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              Purple latte
            </span>
          </li>
          <li class="color-options__item">
            <input
              id="colorOption5"
              class="v-h color-options__radio"
              type="radio"
              name="colors"
              value="pale-pink"
              disabled
            />
            <label
              class="color-options__label color-options__label--pink"
              for="colorOption5"
              aria-labelledby="colorTooltipPink"
            ></label>
            <span id="colorTooltipPink" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              Pale pink
            </span>
          </li>
          <li class="color-options__item">
            <input
              id="colorOption6"
              class="v-h color-options__radio"
              type="radio"
              name="colors"
              value="pale-orange"
              disabled
            />
            <label
              class="color-options__label color-options__label--orange"
              for="colorOption6"
              aria-labelledby="colorTooltipOrange"
            ></label>
            <span id="colorTooltipOrange" class="color-options__tooltip" role="tooltip" aria-hidden="true">
              Pale orange
            </span>
          </li>
        </ul>
      </fieldset>
      <fieldset class="product-form__group product-form__group--quantity">
        <legend class="product-form__caption">Quantity</legend>
        <div class="counter">
          <button class="counter__btn btn-reset" type="button" aria-label="decrease quantity by 1">
            &minus;
          </button>
          <input
            class="counter__input"
            type="text"
            name="quantity"
            value="1"
            pattern="[0-9]*"
            inputmode="numeric"
            aria-label="Quantity"
          />
          <button class="counter__btn btn-reset" type="button" aria-label="increase quantity by 1">+</button>
        </div>
      </fieldset>
      <div class="product-form__btns">
        <button class="product-form__btn btn-reset" type="submit">
          Add to cart
          <span class="v-h">White unisex t-shirt</span>
        </button>
        <button class="product-form__btn product-form__btn--accent btn-reset" type="submit">
          Buy it now
          <span class="v-h">White unisex t-shirt</span>
        </button>
      </div>
    </form>
    <p class="product-detal__text">
      A unisex basic garment with a loose fit. Light and comfortable to your skin.
    </p>
    <p class="product-detal__text">Certification of cotton - GOTS</p>
  </div>
  <div class="product-detal__extra-info">
    <dl class="collaps">
      <dt class="collaps__title">
        <button class="collaps__btn btn-reset" type="button" aria-expanded="false">Sizing & Fit</button>
      </dt>
      <dd class="collaps__desc">
        <p class="collaps__text">Olga is 175cm, she is wearing a size S.</p>
      </dd>
      <dt class="collaps__title">
        <button class="collaps__btn btn-reset" type="button" aria-expanded="false">Composition & Care</button>
      </dt>
      <dd class="collaps__desc">
        <p class="collaps__text">Olga is 175cm, she is wearing a size S.</p>
      </dd>
      <dt class="collaps__title">
        <button class="collaps__btn btn-reset" type="button" aria-expanded="false">Delivery & Returns</button>
      </dt>
      <dd class="collaps__desc">
        <p class="collaps__text">Olga is 175cm, she is wearing a size S.</p>
      </dd>
    </dl>
  </div>
</div>

{% schema %}
  {
    "name": "Main product",
	"tag": "section",
	"class": "product-detal",
	"limit": 1,
	"templates": ["product"],
	"blocks": [
	  {
	    "name": "Accordion",
		"type": "accordion",
		"settings": [
		  {
            "type": "text",
            "id": "accordion_title",
            "label": "Heading"
          },
		  {
			"type": "richtext",
  			"id": "accordion_text",
  			"label": "Accordion text"
		  }
		]
	  }
	],
	"presets": [
	  {
		"name": "Main product"
	  }
	]
  }
{% endschema %}

