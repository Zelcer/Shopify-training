<div class="main-header__container container">
  <nav class="main-nav" aria-label="Main">
    <button class="btn-reset burger-btn" type="button" aria-label="Open menu" aria-expanded="false">
      <svg width="25" height="22" aria-hidden="true" focusable="false">
        <use xlink:href="#burger-icon"></use>
      </svg>
    </button>
    <div class="main-nav__mobile-menu mobile-menu">
      <span id="listTitleMainMobile" class="v-h">Main sections</span>
      <ul class="mobile-menu__list" role="list" aria-labelledby="listTitleMainMobile">
        <li class="mobile-menu__item">
          <a class="main-nav__link mobile-menu__link" href="#">Women</a>
        </li>
        <li class="mobile-menu__item">
          <a class="main-nav__link mobile-menu__link" href="#">Men</a>
        </li>
        <li class="mobile-menu__item">
          <a class="main-nav__link mobile-menu__link" href="#">Kids</a>
        </li>
        <li class="mobile-menu__item">
          <a class="main-nav__link mobile-menu__link" href="#">Company</a>
        </li>
        <li class="mobile-menu__item">
          <a class="main-nav__link mobile-menu__link" href="#">Account</a>
        </li>
      </ul>
      <button class="btn-reset close-btn" type="button" aria-label="Close menu">
        <svg width="20" height="20" aria-hidden="true" focusable="false">
          <use xlink:href="#close-icon"></use>
        </svg>
      </button>
    </div>
    <div class="main-nav__list-wrap">
      <span id="listTitleMain" class="v-h">Main sections</span>
      <ul class="main-nav__list main-nav__list--main" role="list" aria-labelledby="listTitleMain">
        <li class="main-nav__item">
          <a class="main-nav__link" href="#">Women</a>
        </li>
        <li class="main-nav__item">
          <a class="main-nav__link" href="#">Men</a>
        </li>
        <li class="main-nav__item">
          <a class="main-nav__link" href="#">Kids</a>
        </li>
        <li class="main-nav__item">
          <a class="main-nav__link" href="#">Company</a>
        </li>
      </ul>
    </div>
    <a class="main-nav__logo main-logo" href="https://artidnb.myshopify.com">
      <img id="logo_image" class="main-logo__img" src="https://zelcer.github.io/spurit-home-work/img/svg/main-logo.svg" width="139" height="32" alt="Go to main page." />
    </a>
    <span id="listTitleUser" class="v-h" aria-hidden="true">User</span>
    <ul class="main-nav__list main-nav__list--user" role="list" aria-labelledby="listTitleUser">
      <li class="main-nav__item main-nav__item--account">
        <a class="main-nav__link" href="#" aria-labelledby="navAccauntLabel" title="Account">
          <span id="navAccauntLabel" class="main-nav__link-text">Account</span>
          <svg class="main-nav__link-svg" width="18" height="23" aria-hidden="true" focusable="false">
            <use xlink:href="#user-icon"></use>
          </svg>
        </a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link" href="#" aria-labelledby="navSearchLabel" title="Search">
          <span id="navSearchLabel" class="main-nav__link-text">Search</span>
          <svg class="main-nav__link-svg" width="20" height="21" aria-hidden="true" focusable="false">
            <use xlink:href="#search-icon"></use>
          </svg>
        </a>
      </li>
      <li class="main-nav__item">
        <a class="main-nav__link" href="#" aria-labelledby="navCartLabel" title="Cart">
          <span id="navCartLabel" class="main-nav__link-text">
            Cart
            <span class="v-h">added products</span>
            <span class="cart-count">(0)</span>
          </span>
          <svg class="main-nav__link-svg" width="21" height="20" aria-hidden="true" focusable="false">
            <use xlink:href="#cart-icon"></use>
          </svg>
        </a>
      </li>
    </ul>
  </nav>
</div>

{% schema %}
  {
    "name": "Header",
	"tag": "header",
	"class": "main-header",
    "settings": [
	  {
        "type": "image_picker",
  		"id": "logo_image",
  		"label": "Logo image"
	  },
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
	]
  }
{% endschema %}

